{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "crud-reducer": {
      "aliases": ["c"],
      "description": "Generate a CRUD reducer.",
      "factory": "./crud-reducer/index#crudReducer"
    },
    "read-reducer": {
      "aliases": ["cr"],
      "description": "Generate a read only (fetch) reducer.",
      "factory": "./read-reducer/index#readReducer"
    },
    "read-reducer-simple": {
      "description": "Generate a read only (fetch) reducer wihtout normalizr support.",
      "factory": "./read-reducer-simple/index#readReducerSimple"
    }
  }
}
